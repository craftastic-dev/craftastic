NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database connection - matches docker-compose.yml
DATABASE_URL=postgresql://craftastic:craftastic@localhost:5432/craftastic

# Security
JWT_SECRET=dev-secret-key-change-in-production
ENCRYPTION_KEY=your-32-byte-hex-key-for-token-encryption
CORS_ORIGIN=http://localhost:3000

# GitHub OAuth Integration
# Client ID for the shared Craftastic GitHub OAuth app
# This is safe to commit and share - it's public by design
GITHUB_CLIENT_ID=Ov23liz42T3AzHtmASDC

# Docker configuration
DOCKER_HOST=/var/run/docker.sock
SANDBOX_IMAGE=craftastic-sandbox:latest
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=0.5

# Coolify deployment (optional - leave empty for local dev)
COOLIFY_API_URL=
COOLIFY_API_TOKEN=

# Data Directory (where git repos and worktrees are stored)
# Defaults to $HOME/.craftastic if not specified
# CRAFTASTIC_DATA_DIR=$HOME/.craftastic